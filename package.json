{
  "name": "maarten-bday-2025",
  "version": "0.0.0",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "type": "module",
  "engines": {
    "node": ">= 22.0 <23"
  },
  "devDependencies": {
    "@types/dom-speech-recognition": "^0.0.4",
    "@types/node": "~18",
    "@typescript-eslint/eslint-plugin": "~6.2",
    "@typescript-eslint/parser": "~6.2",
    "copyfiles": "^2.4.1",
    "eslint": "~8.46",
    "eslint-config-prettier": "~9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "~3.0",
    "rimraf": "~5.0",
    "ts-api-utils": "~1.0",
    "typescript": "~5.1"
  },
  "scripts": {
    "clean": "rimraf coverage dist tmp",
    "build": "npm run copy-assets && tsc -p tsconfig.json",
    "build:watch": "npm run copy-assets && tsc -w -p tsconfig.json",
    "build:release": "npm run clean && npm run copy-assets && tsc -p tsconfig.release.json",
    "copy-assets": "copyfiles --all --up 1 --exclude \"./**/*.{ts,tsx}\" \"./src/**/*\" ./dist",
    "lint": "eslint src --ext .ts --ext .mts",
    "prettier": "prettier --config .prettierrc --write src"
  },
  "author": "Menno van den Ende <mentosmenno2@users.noreply.github.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "tslib": "~2.6"
  }
}
